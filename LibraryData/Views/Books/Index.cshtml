@model IEnumerable<LibraryData.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Author</th>
            <th>Genres</th>
            <th>Publishers</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>@item.Title</td>
                    <td>@item.Year</td>
                    <td>@item.Author?.Name</td>
                    <td>@string.Join(", ", item.BookGenres.Select(bg => bg.Genre.Name))</td>
                    <td>@string.Join(", ", item.BookPublishers.Select(bp => bp.Publisher.Name))</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
